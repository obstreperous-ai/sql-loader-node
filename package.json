{
  "name": "sql-loader-node",
  "version": "0.1.0",
  "description": "A lean CLI utility in Node.js for loading SQL scripts in minimal setups",
  "main": "src/index.js",
  "bin": {
    "sql-loader": "./src/cli.js"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src test",
    "start": "node src/cli.js"
  },
  "keywords": [
    "sql",
    "loader",
    "cli",
    "postgresql",
    "database"
  ],
  "author": "obstreperous-ai",
  "license": "MIT",
  "dependencies": {
    "commander": "^14.0.3",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "better-sqlite3": "^12.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pkg": {
    "scripts": "src/**/*.js",
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ],
    "outputPath": "dist"
  }
}
